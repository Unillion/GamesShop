<Window x:Class="GamesShop.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Магазин"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <Style TargetType="Button" x:Key="MenuButton">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            <Border x:Name="ActiveLine" 
                                    Height="2" 
                                    VerticalAlignment="Bottom" 
                                    Background="#108BEF"
                                    Opacity="0"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Active">
                                <Setter Property="Foreground" Value="#108BEF"/>
                                <Setter TargetName="ActiveLine" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки профиля -->
        <Style TargetType="Button" x:Key="ProfileButton">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Круглая иконка профиля -->
                            <Ellipse Fill="#3A3A3A"/>
                            <Path Data="M20,10 A10,10 0,1,1,19.9,10Z M10,20 C5,20,2,23,2,28 L18,28 C18,23,15,20,10,20Z"
                                  Fill="White" Stretch="Uniform" Margin="8"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <DockPanel>
        <!-- Верхняя панель -->
        <Grid DockPanel.Dock="Top" Background="#2D2D2D" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопки меню слева -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                <Button x:Name="GamesButton"
                Content="Игры"
                Style="{StaticResource MenuButton}"
                Click="GamesButton_Click"
                Tag="Active"/>
                <Button x:Name="AboutButton"
                Content="Бибилиотека Игр"
                Style="{StaticResource MenuButton}"
                Click="AboutButton_Click"/>
            </StackPanel>

            <!-- Баланс пользователя по центру -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,20,0">
                <TextBlock Text="Баланс: " Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock x:Name="UserBalanceText" Text="0.00" Foreground="#108BEF" FontSize="16" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Кнопка профиля справа -->
            <Button x:Name="ProfileButtonControl"
            Style="{StaticResource ProfileButton}"
            Grid.Column="2"
            VerticalAlignment="Center"
            Click="ProfileButton_Click"/>
        </Grid>

        <!-- Контент -->
        <ContentControl x:Name="MainContent" />
    </DockPanel>
</Window>
