<Window x:Class="GamesShop.dialogueUserControls.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:GamesShop.dialogueUserControls"
        mc:Ignorable="d" 
        WindowStartupLocation="CenterScreen"
        Width="400" Height="250" ResizeMode="NoResize">
    <Border Background="#2D2D2D" CornerRadius="8" Padding="20">
        <StackPanel>
            <TextBlock x:Name="TitleText" 
                      Text="Ввод данных" 
                      Foreground="White" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Margin="0,0,0,15"/>

            <TextBlock x:Name="PromptText" 
                      Text="Введите текст:" 
                      Foreground="White" 
                      FontSize="14"
                      Margin="0,0,0,5"/>

            <TextBox x:Name="InputTextBox" 
                    Height="30" 
                    FontSize="14"
                    Background="#3C3C3C"
                    Foreground="White"
                    BorderBrush="#505050"
                    Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button x:Name="CancelButton" 
                        Content="Отмена" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>

                <Button x:Name="OkButton" 
                        Content="OK" 
                        Style="{StaticResource DialogButtonStyle}"
                        Click="OkButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>