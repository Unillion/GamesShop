<Window x:Class="GamesShop.dialogueUserControls.AddBalanceDialogue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GamesShop.dialogueUserControls"
             mc:Ignorable="d" 
             WindowStartupLocation="CenterScreen"
             Width="500" Height="300">
    <Border Background="#2D2D2D" CornerRadius="8" Padding="20">
        <StackPanel>
            <TextBlock Text="Пополнение баланса" 
                      Foreground="White" 
                      FontSize="18" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Сумма пополнения (₽):" 
                          Foreground="White" 
                          FontSize="14"
                          Margin="0,0,0,5"/>

                <TextBox x:Name="AmountTextBox" 
                        Width="200" 
                        FontSize="14" 
                        Text="10"
                        Background="#3C3C3C"
                        Foreground="White"
                        BorderBrush="#505050"
                        HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20">
                <TextBlock Text="Быстрые суммы:" 
                          Foreground="White" 
                          FontSize="12"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="5$" Style="{StaticResource SecondaryButtonStyle}" Margin="2" Click="QuickAmount_Click" Tag="5"/>
                    <Button Content="10$" Style="{StaticResource SecondaryButtonStyle}" Margin="2" Click="QuickAmount_Click" Tag="10"/>
                    <Button Content="20$" Style="{StaticResource SecondaryButtonStyle}" Margin="2" Click="QuickAmount_Click" Tag="20"/>
                    <Button Content="50$" Style="{StaticResource SecondaryButtonStyle}" Margin="2" Click="QuickAmount_Click" Tag="50"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="CancelButton" 
                        Content="Отмена" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>

                <Button x:Name="SubmitButton" 
                        Content="Пополнить" 
                        Style="{StaticResource DialogButtonStyle}"
                        Click="SubmitButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
