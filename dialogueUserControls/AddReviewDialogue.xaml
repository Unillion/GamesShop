<Window x:Class="GamesShop.dialogueUserControls.AddReviewDialogue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GamesShop.dialogueUserControls"
             mc:Ignorable="d" 
            WindowStartupLocation="CenterScreen"
            Width="500" Height="400">
    <Border Background="#2D2D2D" CornerRadius="8" Padding="20">
        <StackPanel>
            <TextBlock Text="Добавить отзыв" 
                      Foreground="White" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Оценка:" 
                          Foreground="White" 
                          FontSize="14"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>

                <ComboBox x:Name="RatingComboBox" 
                         Width="100" 
                         FontSize="14"
                         SelectedIndex="8"/>
            </StackPanel>

            <TextBlock Text="Текст отзыва:" 
                      Foreground="White" 
                      FontSize="14"
                      Margin="0,0,0,5"/>

            <TextBox x:Name="ReviewTextBox" 
                    Height="150" 
                    TextWrapping="Wrap" 
                    AcceptsReturn="True"
                    VerticalScrollBarVisibility="Auto"
                    FontSize="12"
                    Background="#3C3C3C"
                    Foreground="White"
                    BorderBrush="#505050"/>

            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       Margin="0,20,0,0">
                <Button x:Name="CancelButton" 
                        Content="Отмена" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>

                <Button x:Name="SubmitButton" 
                        Content="Отправить" 
                        Style="{StaticResource DialogButtonStyle}"
                        Click="SubmitButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
