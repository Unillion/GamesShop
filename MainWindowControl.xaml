<UserControl x:Class="GamesShop.MainWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GamesShop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Стили для кнопок навигации -->
        <Style TargetType="Button" x:Key="MenuButton">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            <Border x:Name="ActiveLine" 
                                    Height="2" 
                                    VerticalAlignment="Bottom" 
                                    Background="#108BEF"
                                    Opacity="0"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Active">
                                <Setter Property="Foreground" Value="#108BEF"/>
                                <Setter TargetName="ActiveLine" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="ProfileButton">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="#3A3A3A"/>
                            <Path Data="M20,10 A10,10 0,1,1,19.9,10Z M10,20 C5,20,2,23,2,28 L18,28 C18,23,15,20,10,20Z"
                                  Fill="White" Stretch="Uniform" Margin="8"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стили для карточек игр -->
        <Style x:Key="GameCardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="#505050"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#108BEF"/>
                    <Setter Property="Background" Value="#323232"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GameCardImageBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="GameTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="MaxHeight" Value="40"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="GameGenreStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B4B4B4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="GameRatingStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="GameDescriptionStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#C8C8C8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="GamePriceStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#108BEF"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="AddToCartButtonStyle" TargetType="Button">
            <Setter Property="Content" Value="В корзину"/>
            <Setter Property="Background" Value="#108BEF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1478DC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RemoveFromCartButtonStyle" TargetType="Button">
            <Setter Property="Content" Value="Удалить"/>
            <Setter Property="Background" Value="#C83C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GameImageStyle" TargetType="Image">
            <Setter Property="Stretch" Value="Uniform"/>
            <Style.Triggers>
                <Trigger Property="Source" Value="{x:Null}">
                    <Setter Value="/content/Images/default_game.png"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <DockPanel Background="#1E1E1E">
        <Grid DockPanel.Dock="Top" Background="#2D2D2D" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                <Button x:Name="GamesButton"
                        Content="Игры"
                        Style="{StaticResource MenuButton}"
                        Click="GamesButton_Click"/>
                <Button x:Name="LibraryButton"
                        Content="Библиотека Игр"
                        Style="{StaticResource MenuButton}"
                        Click="LibraryButton_Click"/>
                <Button x:Name="CartButton"
                        Content="Корзина"
                        Style="{StaticResource MenuButton}"
                        Click="CartButton_Click"/>
            </StackPanel>

            <!-- Баланс пользователя -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" 
                       HorizontalAlignment="Right" Margin="0,0,20,0">
                <TextBlock Text="Баланс: " Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock x:Name="UserBalanceText" Text="0.00" Foreground="#108BEF" FontSize="16" 
                          VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Кнопка профиля -->
            <Button x:Name="ProfileButtonControl"
                    Style="{StaticResource ProfileButton}"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Click="ProfileButton_Click"/>
        </Grid>

        <!-- Область контента -->
        <Grid x:Name="MainContentArea">
            <!-- Секция Игр -->
            <ScrollViewer x:Name="GamesSection" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" Background="Transparent" Margin="20">
                    <TextBlock x:Name="WelcomeText" Text="Добро пожаловать!" 
                              Foreground="White" FontSize="24" FontWeight="Bold" 
                              Margin="0,0,0,20"/>

                    <ItemsControl x:Name="GamesItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Секция Библиотеки -->
            <ScrollViewer x:Name="LibrarySection" Visibility="Collapsed" 
                         VerticalScrollBarVisibility="Auto" Background="Transparent" 
                         Padding="20">
                <StackPanel Orientation="Vertical" Background="Transparent">
                    <TextBlock x:Name="LibraryTitleText" Text="Библиотека" 
                              Foreground="White" FontSize="24" FontWeight="Bold" 
                              Margin="0,0,0,20"/>

                    <TextBlock x:Name="LibraryEmptytext" Text="Библиотека пуста" 
                              Foreground="Gray" FontSize="16" 
                              HorizontalAlignment="Center" VerticalAlignment="Center" 
                              Margin="0,50,0,0"/>

                    <ItemsControl x:Name="LibraryItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Секция Корзины -->
            <ScrollViewer x:Name="CartSection" Visibility="Collapsed" 
                         VerticalScrollBarVisibility="Auto" Background="Transparent" 
                         Padding="20">
                <StackPanel Orientation="Vertical" Background="Transparent">
                    <TextBlock x:Name="CartTitleText" Text="Корзина" 
                              Foreground="White" FontSize="24" FontWeight="Bold" 
                              Margin="0,0,0,20"/>

                    <TextBlock x:Name="CartEmptyText" Text="Корзина пуста" 
                              Foreground="Gray" FontSize="16" 
                              HorizontalAlignment="Center" VerticalAlignment="Center" 
                              Margin="0,50,0,0"/>

                    <TextBlock x:Name="TotalPriceText" Foreground="White" FontSize="18" 
                              FontWeight="Bold" Margin="0,0,0,20"/>

                    <ItemsControl x:Name="CartItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                    <Button x:Name="CheckoutButton" Content="Оформить заказ" 
                           Background="#108BEF" Foreground="White" FontSize="16" 
                           FontWeight="Bold" Margin="0,20,0,0" 
                           HorizontalAlignment="Center" Cursor="Hand" 
                           Click="CheckoutButton_Click"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Секция Профиля -->
            <StackPanel x:Name="ProfileSection" Visibility="Collapsed" 
                       Orientation="Vertical" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" MaxWidth="400">
                <TextBlock Text="Профиль пользователя" Foreground="White" FontSize="24" 
                          FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                <TextBlock x:Name="ProfileUsernameText" Text="Имя пользователя" 
                          Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                <Button x:Name="ToBalance" Content="Пополнить Баланс" 
                        Background="#108BEF" Foreground="White" FontSize="16" 
                        FontWeight="Bold" Margin="0,20,0,0" 
                        HorizontalAlignment="Center" Cursor="Hand" 
                        Click="AddToBalance_Click"/>
            </StackPanel>

            <!-- секция игры в библиотеке-->
            <ScrollViewer x:Name="GameLibDetailsSection" Visibility="Collapsed" 
                    VerticalScrollBarVisibility="Auto" Background="Transparent" 
                    Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,30,0">
                        <Border Background="#3C3C3C" Height="400" CornerRadius="8" Margin="0,0,0,20">
                            <Image x:Name="GameLibDetailsImage" 
                            Source="/content/Images/default_game.png" 
                            Stretch="Uniform" 
                            Height="400"/>
                        </Border>

                        <Button x:Name="LibBackButton" 
                            Content="← Назад" 
                            Click="BackFromLibButton_Click"
                            Background="Transparent" Foreground="#108BEF"
                            BorderBrush="#108BEF" BorderThickness="1"
                            FontSize="12" FontWeight="Bold" 
                            Height="30" Cursor="Hand"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock x:Name="GameLibDetailsTitle" Text="Название игры" 
                                Foreground="White" FontSize="28" 
                                FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="GameLibDetailsRating" Text="★★★★★" 
                                Foreground="Gold" FontSize="16" 
                                VerticalAlignment="Center" Margin="15,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock x:Name="GameLibDetailsGenre" Text="Жанр" 
                                Foreground="#B4B4B4" FontSize="14"
                                FontStyle="Italic"/>
                            <TextBlock Text=" • " Foreground="#B4B4B4" FontSize="14"/>
                            <TextBlock x:Name="GameLibDetailsReleaseDate" Text="Дата выхода" 
                                Foreground="#B4B4B4" FontSize="14"/>
                        </StackPanel>

                        <TextBlock x:Name="GameLibDetailsDescription" Text="Описание игры" 
                            Foreground="White" FontSize="14" TextWrapping="Wrap"
                            Margin="0,0,0,30" TextAlignment="Justify"/>

                        <Border Background="#2D2D2D" CornerRadius="8" Padding="15" Margin="0,0,0,30">
                            <StackPanel>
                                <TextBlock Text="Характеристики" Foreground="White" 
                                    FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                <StackPanel x:Name="GameLibDetailsFeatures">
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="#2D2D2D" CornerRadius="8" Padding="15" Margin="0,0,0,30">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Ключ активации" 
                                       Foreground="White" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>

                                    <Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Right" 
                                        VerticalAlignment="Center"
                                        Cursor="Hand" Click="CopyActivationKey_Click" Padding="5" Width="30" Height="30">
                                        <Image Source="/content/Images/copy_icon.png" 
                                        Width="20" 
                                        Height="20"
                                        ToolTip="Скопировать ключ активации"/>
                                    </Button>

                                    <Button x:Name="UpdateActivationKey" 
                                        Grid.Column="2"
                                        Background="Transparent" 
                                        BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Right" 
                                        VerticalAlignment="Center"
                                        Cursor="Hand" Click="UpdateActivationKey_Click" Padding="5" Width="30" Height="30">
                                        <Image Source="/content/Images/refresh_icon.png" 
                                           Width="20" 
                                           Height="20"
                                           ToolTip="Обновить ключ активации"/>
                                    </Button>
                                </Grid>

                                <TextBlock Name="ActivationKey" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#2D2D2D" CornerRadius="8" Padding="15" Margin="0,0,0,30">
                            <StackPanel>
                                <TextBlock Text="Статистика по игре" Foreground="White" 
                                    FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                                <StackPanel x:Name="GameStatisticsPanel">
                                    <TextBlock x:Name="GameStatisticsPanelText" Text="Загрузка статистики..." 
                                        Foreground="#B4B4B4" FontSize="14"
                                        FontStyle="Italic"/>
                                </StackPanel>

                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Секция страницы игры -->
            <ScrollViewer x:Name="GameDetailsSection" Visibility="Collapsed" 
              VerticalScrollBarVisibility="Auto" Background="Transparent" 
              Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка - изображение и кнопка покупки -->
                    <StackPanel Grid.Column="0" Margin="0,0,30,0">
                        <!-- Большое изображение игры -->
                        <Border Background="#3C3C3C" Height="400" CornerRadius="8" Margin="0,0,0,20">
                            <Image x:Name="GameDetailsImage" 
                            Source="/content/Images/default_game.png" 
                            Stretch="Uniform" 
                            Height="400"/>
                        </Border>

                        <Button x:Name="BackButton" 
                            Content="← Назад" 
                            Click="BackButton_Click"
                            Background="Transparent" Foreground="#108BEF"
                            BorderBrush="#108BEF" BorderThickness="1"
                            FontSize="12" FontWeight="Bold" 
                            Height="30" Cursor="Hand"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"/>

                        <!-- Блок с ценой и кнопкой покупки -->
                        <Border Background="#2D2D2D" CornerRadius="8" Padding="20">
                            <StackPanel>
                                <TextBlock x:Name="GameDetailsPrice" Text="0.00 $" 
                              Foreground="#108BEF" FontSize="24" 
                              FontWeight="Bold" HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>

                                <!-- Кнопка "В корзину" как альтернатива -->
                                <Button x:Name="AddToCartDetailsButton" Content="В корзину" 
                                    Background="Transparent" Foreground="White"
                                    FontSize="14" FontWeight="Bold" 
                                    BorderBrush="#108BEF" BorderThickness="1"
                                    Height="35" Cursor="Hand" Margin="0,10,0,0"
                                    Click="AddToCartDetailsButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#108BEF20"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Правая колонка - информация об игре -->
                    <StackPanel Grid.Column="1">
                        <!-- Заголовок и рейтинг -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock x:Name="GameDetailsTitle" Text="Название игры" 
                          Foreground="White" FontSize="28" 
                          FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock x:Name="GameDetailsRating" Text="★★★★★" 
                          Foreground="Gold" FontSize="16" 
                          VerticalAlignment="Center" Margin="15,0,0,0"/>
                        </StackPanel>

                        <!-- Жанр и дата выхода -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock x:Name="GameDetailsGenre" Text="Жанр" 
                          Foreground="#B4B4B4" FontSize="14"
                          FontStyle="Italic"/>
                            <TextBlock Text=" • " Foreground="#B4B4B4" FontSize="14"/>
                            <TextBlock x:Name="GameDetailsReleaseDate" Text="Дата выхода" 
                          Foreground="#B4B4B4" FontSize="14"/>
                        </StackPanel>

                        <!-- Полное описание -->
                        <TextBlock x:Name="GameDetailsDescription" Text="Описание игры" 
                      Foreground="White" FontSize="14" TextWrapping="Wrap"
                      Margin="0,0,0,30" TextAlignment="Justify"/>

                        <!-- Характеристики -->
                        <Border Background="#2D2D2D" CornerRadius="8" Padding="15" Margin="0,0,0,30">
                            <StackPanel>
                                <TextBlock Text="Характеристики" Foreground="White" 
                              FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                                <StackPanel x:Name="GameDetailsFeatures">
                                    <!-- Характеристики будут добавляться динамически -->
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Отзывы -->
                        <Border Background="#2D2D2D" CornerRadius="8" Padding="15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="Отзывы" Foreground="White" 
                                  FontSize="16" FontWeight="Bold"/>
                                    <TextBlock x:Name="GameDetailsReviewsCount" Text=" (0)" 
                                  Foreground="#B4B4B4" FontSize="16" 
                                  Margin="5,0,0,0"/>
                                </StackPanel>

                                <StackPanel x:Name="GameDetailsReviewsList">
                                    <!-- Отзывы будут добавляться динамически -->
                                    <TextBlock Text="Пока нет отзывов" 
                                  Foreground="#B4B4B4" FontSize="14" 
                                  FontStyle="Italic" HorizontalAlignment="Center"
                                  Margin="0,20,0,0"/>
                                </StackPanel>

                                <!-- Кнопка добавления отзыва -->
                                <Button Content="Написать отзыв" 
                           Background="Transparent" Foreground="#108BEF"
                           BorderBrush="#108BEF" BorderThickness="1"
                           FontSize="12" FontWeight="Bold" 
                           Height="30" Cursor="Hand" Margin="0,15,0,0"
                           Click="AddReviewButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#108BEF20"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</UserControl>